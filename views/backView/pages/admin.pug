extends ../layout
block navbar
    header.navbar.navbar-inverse.navbar-fixed-top.m-navbar(style={'margin-bottom': '0'})
        div.container-fluid
            div.navbar-header
                button.navbar-toggle.collapsed(type='button',data-toggle='collapse',data-target='#topbar-collapse',aria-expanded='false')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar

                a.navbar-brand(href='javascript:void(0);',style={'padding-top': '6px'})
                    img(src='/images/logo.png',alt='logo')/
            nav#topbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                ul.nav.navbar-nav.navbar-right.m-navbar-right
                    - var userName = 'Admin'
                    li: a(href='javascript:void(0)') #{userName}
                    li: a(href='/login') 退出登录
block sideMenu
    div.m-side-menu
        mixin liItem(item)
            li(class={'active': item.active},role='presentation')
                a.m-side-item(href='#' + item.href, aria-controls=item.href, role='tab', data-toggle='tab') #{item.text}
        ul.nav.nav-pills.nav-stacked(role='tablist')
            +liItem({
                active: true,
                href: 'test1',
                text: 'Banner'
            })
            +liItem({
                active: false,
                href: 'test2',
                text: 'Banner'
            })
            +liItem({
                active: false,
                href: 'test3',
                text: 'Banner'
            })

block content
    div.m-main
        div.container-fluid.m-tab-content-wrap
            div.tab-content
                div#test1.tab-pane.active(role='tabpanel') 
                    include ../includes/banner
                div#test2.tab-pane(role='tabpanel') Test2
                div#test3.tab-pane(role='tabpanel') Test3

block scripts
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/bootstrap-table.min.js')
    script(src='/js/bootstrap-table-zh-CN.min.js')
    script(src='/js/pnotify.js')
    script(src='/js/bootstrap-dialog.min.js')
    script(src='/js/admin.js')